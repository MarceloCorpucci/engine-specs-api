          },
          "camshaft": {
            "type": "string",
            "format": "string"
          },
          "power": {
            "type": "int"
          },
          "forced_induction": {
            "type": "boolean"
          },
          "fuel_type": {
            "type": "string"
          }
        }
      },
      "EngineRequests": {
      }
    }
  }
}